<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="SmokyTest" verbose="1" >
    <test name="Negative" >
        <classes>
            <class name="com.phonebook.CreateAccountTests">
                <!-- указываем какие тесты из CreateAccountTests нужно запустить, а какие нет -->
                <methods>
                    <!-- не запускаем которые в названии содержат Positive (исключаем позитивн) -->
                    <!-- <exclude name=".*Positive.*"/> -->
                    <!-- запускаем которые в названии содержат Negative (включая негативн) -->
                    <include name=".*Negative.*"/>
                </methods>
            </class>
            <class name="com.phonebook.LoginTests">
                <methods>
                    <include name=".*Positive.*"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>